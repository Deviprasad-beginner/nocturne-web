{
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist/public" } },
    { "src": "api/index.ts", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" }
  ],
  "routes": [
    { "src": "/[^.]+", "dest": "/index.html" }
  ]
}
