# Nocturne Environment Variables
# Copy this file to .env and fill in your values

# Database Connection String
# Get one from Neon (https://neon.tech) or use a local Postgres instance.
# Format: postgres://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/nocturne"
# DNS workaround: If using IP address, set the original hostname for SSL verification
DB_SNI_SERVERNAME=

# Session secret — generate a strong random string for production
# Example: openssl rand -hex 32
SESSION_SECRET=

# Google Gemini API Configuration (optional, for AI features)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# Frontend URL — REQUIRED in production for CORS
# Example: https://nocturne.example.com
FRONTEND_URL=

# Server port (defaults to 5000)
PORT=5000

# Node environment
NODE_ENV=development
